<div class='container'>
  <div class='row'>
    <div class='col-md-4 col-md-offset-4'>
      <h2>新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      <tbody>
        <tr>
          <div class='field'>
            <td><%= f.label '名前' %></td><br>
            <td>
              <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "form-control",required: true,
                                    minlength: @minimum_password_length,
                                    maxlength: '30' %>
            </td>
          </div>
        </tr>
        <tr>
          <div class='field'>
            <td><%= f.label "メールアドレス" %></td><br>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" ,required: true,
                                      minlength: @minimum_password_length,
                                      maxlength: '30' %>
            </td>
          </div>
        </tr>
        <tr>
          <div class='field'>
            <td><%= f.label "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
            </td><br>
            <td><%= f.password_field :password, autocomplete: "new-password",class: "form-control" ,required: true,
                                    minlength: @minimum_password_length,
                                    maxlength: '30' %></td>
          </div>
        </tr>
        <tr>
          <div class='field'>
            <td><%= f.label "パスワード(確認用)" %></td><br>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control",required: true,
                                      minlength: @minimum_password_length,
                                      maxlength: '30' %></td>
          </div>
        </tr>
        <tr>
          <td>
            <div class='action'>
              <%= f.submit "新規会員登録",class: "btn-sm btn-success btn-block" %>
            </div>
          </td>
        </tr>
      </tbody>
      <% end %>
      <div class='finish-sign_up'>
          <h2><i class="glyphicon glyphicon-hand-right"></i>
              既に登録済みの方</h2>
              <sapn><%= render "devise/shared/links" %></sapn>
      </div>
    </div>
  </div>
</div>
